{
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      // This paths synchronized with webpack shared config
      "@/*": ["*"]
    },
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "types": ["reflect-metadata", "node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": false
  },
  "typeAcquisition": { "enable": true }
}
